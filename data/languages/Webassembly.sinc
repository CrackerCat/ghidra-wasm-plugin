	opc = (0, 7)
	opc2 = (0, 7)
	valtype = (0, 7)
	bytev = (0, 7)

	topbit = (7, 7)
	v0 = (0, 6)
	v1 = (0, 6)
	v2 = (0, 6)
	v3 = (0, 6)
	v4 = (0, 6)
	v5 = (0, 6)
	v6 = (0, 6)
	v7 = (0, 6)
	v8 = (0, 6)
	v9 = (0, 6)
;

